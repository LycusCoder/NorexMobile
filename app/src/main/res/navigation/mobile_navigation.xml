<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/dashboardFragment">

    <!-- Dashboard Fragment -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.minikasirpintarfree.app.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_dashboard_to_produk"
            app:destination="@id/produkFragment" />

        <action
            android:id="@+id/action_dashboard_to_transaksi"
            app:destination="@+id/transaksiFragment" />

        <action
            android:id="@+id/action_dashboard_to_laporan"
            app:destination="@+id/laporanFragment" />

        <action
            android:id="@+id/action_dashboard_to_settings"
            app:destination="@+id/settingsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_transactionHistoryFragment"
            app:destination="@id/transactionHistoryFragment" />
    </fragment>

    <!-- Produk Fragment -->
    <fragment
        android:id="@+id/produkFragment"
        android:name="com.minikasirpintarfree.app.ui.produk.ProdukFragment"
        android:label="Daftar Produk"
        tools:layout="@layout/fragment_produk" >
        <action
            android:id="@+id/action_produkFragment_to_addProdukFragment"
            app:destination="@id/addProdukFragment" />
    </fragment>

    <!-- Transaksi Fragment -->
    <fragment
        android:id="@+id/transaksiFragment"
        android:name="com.minikasirpintarfree.app.ui.transaksi.TransaksiFragment"
        android:label="Transaksi"
        tools:layout="@layout/fragment_transaksi" />

    <!-- Laporan Fragment -->
    <fragment
        android:id="@+id/laporanFragment"
        android:name="com.minikasirpintarfree.app.ui.laporan.LaporanFragment"
        android:label="Laporan"
        tools:layout="@layout/fragment_laporan" />

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.minikasirpintarfree.app.ui.settings.SettingsFragment"
        android:label="Pengaturan"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_profilTokoFragment"
            app:destination="@+id/profilTokoFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
    </fragment>

    <!-- Profil Toko Fragment -->
    <fragment
        android:id="@+id/profilTokoFragment"
        android:name="com.minikasirpintarfree.app.ui.settings.ProfilTokoFragment"
        android:label="Profil Toko"
        tools:layout="@layout/fragment_profil_toko" />

    <!-- Change Password Fragment -->
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.minikasirpintarfree.app.ui.settings.ChangePasswordFragment"
        android:label="Ubah Password"
        tools:layout="@layout/fragment_change_password" />

    <!-- Notifications Fragment -->
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.minikasirpintarfree.app.ui.notifications.NotificationsFragment"
        android:label="Notifikasi"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/addProdukFragment"
        android:name="com.minikasirpintarfree.app.ui.produk.AddProdukFragment"
        android:label="Tambah Produk"
        tools:layout="@layout/fragment_add_produk">
        <argument
            android:name="prefillBarcode"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
    </fragment>

    <fragment
        android:id="@+id/transactionHistoryFragment"
        android:name="com.minikasirpintarfree.app.ui.history.TransactionHistoryFragment"
        android:label="Riwayat Transaksi"
        tools:layout="@layout/fragment_transaction_history" />

</navigation>
