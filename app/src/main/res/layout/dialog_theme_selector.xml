<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Tema"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <!-- Spring -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardThemeSpring"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@color/spring_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spring"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/checkSpring"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:visibility="gone" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Summer -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardThemeSummer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@color/summer_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summer"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/checkSummer"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:visibility="gone" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Autumn -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardThemeAutumn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@color/autumn_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autumn"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/checkAutumn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:visibility="gone" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Winter -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardThemeWinter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@color/winter_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Winter"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/checkWinter"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:visibility="gone" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

</LinearLayout>
