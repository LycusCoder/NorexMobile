<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:paddingBottom="88dp"
    android:clipToPadding="false">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- Search Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?attr/colorSurface">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Produk"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    
                    <EditText
                        android:id="@+id/etSearchProduk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Cari nama produk..."
                        android:padding="12dp"
                        android:background="?attr/colorBackground"
                        android:textColor="?attr/colorOnBackground"
                        android:textColorHint="?attr/colorOnSurfaceVariant"/>
                    
                    <Button
                        android:id="@+id/btnSearchProduk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cari"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
                
                <Button
                    android:id="@+id/btnScanBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan Barcode"
                    android:drawableLeft="@drawable/ic_scan" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Cart Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keranjang"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />
        
        <!-- RecyclerView - akan scroll dengan parent NestedScrollView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false" />
        
        <!-- Empty View -->
        <TextView
            android:id="@+id/tvEmptyCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:text="Keranjang kosong\n\nScan atau cari produk untuk memulai transaksi"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginBottom="16dp" />
        
        <!-- Total Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?attr/colorPrimary">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Harga:"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary" />
                    
                    <TextView
                        android:id="@+id/tvTotalHarga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimary" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kembalian:"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnPrimary" />
                    
                    <TextView
                        android:id="@+id/tvKembalian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimary" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Bottom Buttons (Sekarang di dalam scroll view) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            
            <Button
                android:id="@+id/btnClearCart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Batal"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            
            <Button
                android:id="@+id/btnBayar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bayar"
                android:layout_marginStart="8dp" />
        </LinearLayout>
        
    </LinearLayout>
</androidx.core.widget.NestedScrollView>